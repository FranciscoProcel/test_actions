<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_github_webhook_log_tree" model="ir.ui.view">
        <field name="name">github.webhook.log.tree</field>
        <field name="model">github.webhook.log</field>
        <field name="arch" type="xml">
            <tree>
                <field name="create_date"/>
                <field name="name"/>
                <field name="repository"/>
                <field name="pr_number"/>
                <field name="merged"/>
                <field name="merged_at"/>
                <field name="base_branch"/>
                <field name="head_branch"/>
            </tree>
        </field>
    </record>

    <record id="view_github_webhook_log_form" model="ir.ui.view">
        <field name="name">github.webhook.log.form</field>
        <field name="model">github.webhook.log</field>
        <field name="arch" type="xml">
            <form string="GitHub Webhook Log">
                <sheet>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="repository"/>
                            <field name="repo_owner"/>
                            <field name="pr_number"/>
                            <field name="html_url"/>
                        </group>
                        <group>
                            <field name="state"/>
                            <field name="merged"/>
                            <field name="merged_at"/>
                            <field name="merged_by"/>
                            <field name="merge_commit_sha"/>
                        </group>
                    </group>
                    <group>
                        <group>
                            <field name="base_branch"/>
                            <field name="head_branch"/>
                        </group>
                        <group>
                            <field name="labels"/>
                            <field name="assignees"/>
                            <field name="requested_reviewers"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Body">
                            <field name="body" nolabel="1"/>
                        </page>
                        <page string="Payload crudo">
                            <field name="raw_payload" nolabel="1"/>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_github_webhook_log" model="ir.actions.act_window">
        <field name="name">GitHub Webhooks</field>
        <field name="res_model">github.webhook.log</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem id="menu_github_webhook_root" name="GitHub Webhooks" sequence="10"/>
    <menuitem id="menu_github_webhook_logs" name="Registros"
              parent="menu_github_webhook_root" action="action_github_webhook_log" sequence="10"/>
</odoo>